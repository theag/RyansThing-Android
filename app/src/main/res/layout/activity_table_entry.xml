<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ryansthing.TableEntryActivity"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <CheckBox
        android:id="@+id/chkText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtText"
        android:text="text"/>

    <EditText
        android:id="@+id/txtText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/chkText"
        android:layout_alignParentRight="true" />

    <CheckBox
        android:id="@+id/chkDice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtAmount"
        android:text="dice"/>

    <EditText
        android:id="@+id/txtAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtText"
        android:layout_toRightOf="@+id/chkDice"
        android:ems="2"
        android:inputType="number"
        android:text="1"/>

    <TextView
        android:id="@+id/lblDice1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtAmount"
        android:layout_toRightOf="@+id/txtAmount"
        android:text="d"/>

    <EditText
        android:id="@+id/txtSides"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtText"
        android:layout_toRightOf="@+id/lblDice1"
        android:ems="2"
        android:inputType="number"
        android:text="1"/>

    <TextView
        android:id="@+id/lblDice2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtAmount"
        android:layout_toRightOf="@+id/txtSides"
        android:text="+"/>

    <EditText
        android:id="@+id/txtModifier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtText"
        android:layout_toRightOf="@+id/lblDice2"
        android:ems="2"
        android:inputType="number"
        android:text="0"/>

    <CheckBox
        android:id="@+id/chkUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtUnit"
        android:text="unit"/>

    <EditText
        android:id="@+id/txtUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtAmount"
        android:layout_toRightOf="@+id/chkUnit"
        android:layout_alignParentRight="true" />

    <CheckBox
        android:id="@+id/chkAppears"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtAppears"
        android:text="appears"/>

    <EditText
        android:id="@+id/txtAppears"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtUnit"
        android:layout_toRightOf="@+id/chkAppears"
        android:ems="2"
        android:inputType="number" />

    <TextView
        android:id="@+id/lblRollon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtAppears"
        android:textColor="@color/colorAccentLight"
        android:text="Roll On"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/subpanel_border"
        android:layout_below="@+id/lblRollon"
        android:layout_above="@+id/btnSave"
        android:layout_alignParentStart="true">

        <ListView
            android:id="@+id/lvRollon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>

        <ImageButton
            android:id="@+id/btnAddRollon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AppTheme.FloatingButton"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_add_black_24dp"
            android:onClick="buttonClick"/>

    </RelativeLayout>

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/lvItems"
        android:layout_alignParentBottom="true"
        android:text="Save"
        android:onClick="buttonClick"/>

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/btnSave"
        android:layout_alignParentBottom="true"
        android:text="Cancel"
        android:onClick="buttonClick"/>


</RelativeLayout>
